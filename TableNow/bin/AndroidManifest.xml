<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tablenow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tablenow.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tablenow.Restaurant"
            android:label="@string/title_activity_restaurant"
            android:parentActivityName="com.tablenow.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.MainActivity" />
        </activity>
        <activity
            android:name="com.tablenow.User"
            android:label="@string/title_activity_user"
            android:parentActivityName="com.tablenow.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.MainActivity" />
        </activity>
        <activity
            android:name="com.tablenow.UserSearch"
            android:label="@string/title_activity_user_search"
            android:parentActivityName="com.tablenow.User" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.User" />
        </activity>
        <activity
            android:name="com.tablenow.UserSettings"
            android:label="@string/title_activity_user_settings"
            android:parentActivityName="com.tablenow.User" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.User" />
        </activity>
        <activity
            android:name="com.tablenow.UserLayout"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_user_layout"
            android:parentActivityName="com.tablenow.User" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.User" />
        </activity>
        <activity
            android:name="com.tablenow.Sign_up"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.tablenow.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.MainActivity" />
        </activity>
        <activity
            android:name="com.tablenow.Editor"
            android:label="@string/title_activity_editor"
            android:parentActivityName="com.tablenow.Restaurant" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tablenow.Restaurant" />
        </activity>
        <activity
            android:name="com.tablenow.User_results"
            android:label="@string/title_activity_user_results" >
        </activity>
        <activity
            android:name="com.tablenow.Restaurant_update"
            android:label="@string/title_activity_restaurant_update" >
        </activity>
        <activity
            android:name="com.tablenow.User_update"
            android:label="@string/title_activity_user_update" >
        </activity>
    </application>

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
